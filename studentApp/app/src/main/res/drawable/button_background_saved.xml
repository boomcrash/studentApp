<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Cambia el color según tus preferencias -->
            <corners android:radius="40dp" /> <!-- Mantiene el mismo redondeo que ya tenías -->
        </shape>
    </item>

    <!-- Estado normal del botón -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- Color del fondo normal del botón (igual al que ya tenías) -->
            <corners android:radius="40dp" /> <!-- Mantiene el mismo redondeo que ya tenías -->
        </shape>
    </item>
</selector>
